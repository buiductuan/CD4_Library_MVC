@{
    ViewBag.Title = " Danh sách Bộ môn - Tổ";
    Layout = "~/Areas/AdminCP/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <style>
        .form-group {
            margin-bottom: 40px;
        }

        h2 {
            margin-bottom: 30px;
        }
    </style>
}
@section Scripts{
    <script src="~/Assets/Admin/js/controller/DmBmController.js"></script>
}


<h2>
    Danh sách Bộ môn - Tổ
    <a class="btn btn-primary pull-right" data-toggle="modal" href='#create_modal'>Thêm mới</a>
</h2>

<table id="datatable" class="table table-striped table-bordered display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Ký hiệu
            </th>
            <th>
                Tên Bộ môn - Tổ
            </th>
            <th>
                Ghi chú
            </th>
            <th>
                Đang sử dụng
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>


<div class="modal" id="update_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body clearfix">
                <input type="hidden" id="ID_hide" />
                <div class="form-group">
                    <label class="control-label col-md-2">Tên</label>
                    <div class="col-md-10">
                        <input type="text" id="ten" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="control-label col-md-2">Ký hiệu</label>
                    <div class="col-md-10">
                        <input type="text" id="kyhieu" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="control-label col-md-2">Ghi chú</label>
                    <div class="col-md-10">
                        <input type="text" id="ghi_chu" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Active</label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <input type="checkbox" id="actived" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="btn_update_modal" class="btn btn-primary">Cập nhật</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="detail_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" aria-hidden="true" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body clearfix">
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            Tên :
                        </dt>

                        <dd>
                            <span id="ten_detail"></span>
                        </dd>

                        <dt>
                            Ký hiệu :
                        </dt>

                        <dd>
                            <span id="ky_hieu_detail"></span>
                        </dd>

                        <dt>
                            Ghi chú :
                        </dt>

                        <dd>
                            <span id="ghi_chu_detail"></span>
                        </dd>

                        <dt>
                            Active :
                        </dt>

                        <dd>
                            <input type="checkbox" disabled="disabled" id="active_detail" />

                        <dt>
                            Mã cấp cha :
                        </dt>

                        <dd>
                            <span id="ma_parent_detail"></span>
                        </dd>

                        <dt>
                            Người tạo :
                        </dt>

                        <dd>
                            <span id="username_detail"></span>
                        </dd>

                        <dt>
                            Ngày sửa :
                        </dt>

                        <dd>
                            <span id="edit_date_detail"></span>
                        </dd>

                        <dt>
                            Tên bảng :
                        </dt>

                        <dd>
                            <span id="table_name_detail"></span>
                        </dd>

                        <dt>
                            Last Code :
                        </dt>

                        <dd>
                            <span id="last_code_detail"></span>
                        </dd>

                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="create_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4>Thêm mới danh mục bộ môn</h4>
            </div>
            <div class="modal-body clearfix">
                <div class="form-group">
                    <label class="control-label col-md-2">Danh mục cha</label>
                    <div class="col-md-10">
                       <select class="form-control" id="dm_parent"></select>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="control-label col-md-2">Mã</label>
                    <div class="col-md-10">
                        <input type="text" id="ma" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="control-label col-md-2">Tên</label>
                    <div class="col-md-10">
                        <input type="text" id="cten" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="control-label col-md-2">Ký hiệu</label>
                    <div class="col-md-10">
                        <input type="text" id="cky_hieu" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="control-label col-md-2">Ghi chú</label>
                    <div class="col-md-10">
                        <input type="text" id="cghi_chu" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Active</label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <input type="checkbox" checked id="cactived" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="btn_create_modal" class="btn btn-primary">Thêm mới</button>
            </div>
        </div>
    </div>
</div>


