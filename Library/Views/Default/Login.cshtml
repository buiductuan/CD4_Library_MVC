@model Library.Models.LoginModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đăng nhập quản trị hệ thống";
}

@section Styles{
    <style>
        .error_custom ul>li{
            list-style-type:none;
            margin-right:10px;
            margin-bottom:20px;
        }
    </style>
}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-danger">
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Default", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-md-12">
                        @Html.ValidationSummary(false, "", new { @class = "error_custom pull-right" })
                    </div>
                    <label id="error_UserName" class="text-bold">Tên đăng nhập</label>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(model => model.username, new { @class = "form-control", @placeholder = "Tên đăng nhập", @autofocus = "autofocus" })
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <label id="error_Password" class="text-bold">Mật khẩu</label>
                    <div class="form-group has-feedback">
                        @Html.PasswordFor(model => model.password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat pull-right">Đăng nhập</button>
                        </div><!-- /.col -->
                    </div>
                }
            </div>
        </div>
    </div>
</div>